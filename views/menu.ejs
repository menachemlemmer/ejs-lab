<%- include('./partials/nav') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>
  </head>
  <body>
    <h1>Full Menu</h1>
    <h2>Mains</h2>
    <% menu.forEach((item) => { %> <% if (item.category === 'mains') { %>
    <h5><%= item.name %></h5>
    <ul>
      <li>Price: <%= item.price %></li>
      <li>Rating: <%= item.rating %></li>
      <li>Details: <%= item.details %></li>
    </ul>
    <% } %> <% }) %>
    <h2>Sides</h2>
    <% menu.forEach((item) => { %> <% if (item.category === 'sides') { %>
    <h5><%= item.name %></h5>
    <ul>
      <li>Price: <%= item.price %></li>
      <li>Rating: <%= item.rating %></li>
      <li>Details: <%= item.details %></li>
    </ul>
    <% } %> <% }) %>
    <h2>Desserts</h2>
    <% menu.forEach((item) => { %> <% if (item.category === 'desserts') { %>
    <h5><%= item.name %></h5>
    <ul>
      <li>Price: <%= item.price %></li>
      <li>Rating: <%= item.rating %></li>
      <li>Details: <%= item.details %></li>
    </ul>
    <% } %> <% }) %>
  </body>
</html>
